<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_security"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全等级: 高 "
            android:layout_marginTop="27dp"/>
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="绑定手机号"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="@color/colorSamber"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_change_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="更换"
            android:drawablePadding="2dp"
            android:textSize="16sp"
            android:drawableRight="@drawable/icon_right"
            android:textColor="@color/colorBind"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/txt_change_phone"
            android:gravity="center"
            android:textColor="@color/colorSamber"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="13664130000"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
</LinearLayout>
